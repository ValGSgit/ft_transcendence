{
  "name": "transcendence",
  "version": "1.0.0",
  "description": "A modern web application featuring a 3D Pong game with authentication, social features, and AI opponent",
  "private": true,
  "type": "module",
  "scripts": {
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install && cd ../shared && npm install",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm run preview",
    "build:frontend": "cd frontend && npm run build",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules shared/node_modules",
    "test": "cd backend && npm test"
  },
  "keywords": [
    "transcendence",
    "pong",
    "three.js",
    "vue",
    "express",
    "socket.io",
    "jwt",
    "gaming",
    "ai",
    "42"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
