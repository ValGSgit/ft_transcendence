# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Database
DATABASE_PATH=./data/transcendence.db

# CORS Origins (comma-separated)
# CORS_ORIGINS=http://localhost:4200,http://localhost:5173

# Rate Limiting
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX=100

# OAuth Configuration
# Google OAuth (Get from https://console.cloud.google.com/)
GOOGLE_CLIENT_ID=googleCid
GOOGLE_CLIENT_SECRET=googleCsec
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# GitHub OAuth (Get from https://github.com/settings/developers)
GITHUB_CLIENT_ID=githubCid
GITHUB_CLIENT_SECRET=githubCsec
GITHUB_CALLBACK_URL=http://localhost:3000/api/auth/github/callback

# Frontend URL for OAuth redirects
FRONTEND_URL=http://localhost:5173
