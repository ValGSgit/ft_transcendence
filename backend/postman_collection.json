              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"Great post!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/posts/1/comments",
              "host": ["{{baseUrl}}"],
              "path": ["posts", "1", "comments"]
            }
          }
        }
      ]
    },
